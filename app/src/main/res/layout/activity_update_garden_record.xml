<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
    tools:context="com.example.macxpiiw.myapplication.UpdateGardenRecord">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="1dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/updateGarden_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ชื่อแปลง"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="หมู่บ้าน :"
                    android:layout_margin ="5dp"
                    android:textSize="18dp"/>
                <Spinner
                    android:id="@+id/spinner_Location"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="5dp">
                </Spinner>



            </LinearLayout>


            <GridLayout
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black_overlay">
            </GridLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/updateLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ลองติจูด"
                    android:inputType="number"
                    android:layout_marginBottom="20dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/updateLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ละติจูด"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/updateLevel_Sea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ความสูงระดับน้ำทะเล(เมตร)"
                    android:inputType="number"
                    android:layout_marginBottom="20dp"/>
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/updateGarden_Size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="พื้นที่ระบาด(ไร่)"
                    android:inputType="number"
                    android:layout_marginBottom="20dp"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_updateGarden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomNavigationView"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="แก้ไข"
                android:textColor="#000"
                android:background="@color/colorPrimaryDark"
                android:textSize="20sp" />




        </LinearLayout>

    </RelativeLayout>
</ScrollView>

